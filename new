#include <iostream>
using namespace std;

int main()
{
    int num = 1, even_sum, odd_sum, sum;
    // number 1
    cout<<"Введите любое число:";
    while (num != 0)
    {
        cin>>num;
        sum += num;
    }
    cout<<sum;
    
    
    // number 2
    cout<<"Введите любое число:";
    while (num != 0)
    {
        cin>>num;
        if (num % 2 == 0)
        {
             even_sum += num;
        }
        else
        {
            odd_sum += num;
        }
        cout<<"Сумма четных чисел = "<<even_sum<<endl;
        cout<<"Сумма нечетных чисел = "<<odd_sum<<endl;
    }
    





    return 0;
}
